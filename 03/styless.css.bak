body {
	color: darkblue;
	background-color: lightgrey;
}

h1, h2, h3 {
	color: rgb(255,255,255);
	font-family: Arial, sans-serif;
	border-bottom: 2px solid rgb(87,185,178);
	padding-top: 10px;
	padding-bottom: 5px;
}

h1 {
	font-size: 2em;
}
#logo {
	font-size: 2em;
	color: rgba(255,255,255,.8);
	font-style: italic;
	text-align: center;
	margin-bottom: 30px;
	background-color: rgb(191,91,116);
	border-radius: 0 0 10px 10px;
	padding: 10px;
}